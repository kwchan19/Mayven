<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.mayven.mayven.RegisterUsername"
    android:background="#60b0f4">

    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="46dp"
        android:layout_height="30dp"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        />

    <ImageView
        android:id="@+id/companyName"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/mayven_icon" />

    <TextView
        android:id="@+id/schoolName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="70dp"
        android:layout_below="@id/companyName"
        android:layout_marginLeft="70dp"
        android:gravity="center"
        android:text="School"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_marginTop="20dp"
        />


    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_marginRight="140dp"
        android:layout_height="45dp"
        android:layout_marginTop="50dp"
        android:textSize="14sp"
        android:gravity="center"
        android:hint="Enter your email"
        android:layout_below="@+id/schoolName"
        android:layout_centerHorizontal="true"
        android:background="#FFFF" />
    <ImageView
        android:visibility="invisible"
        android:id="@+id/noEmail"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/schoolName"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_delete_foreground"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_marginRight="140dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_below="@id/email"
        android:hint="Enter your password"
        android:layout_centerHorizontal="true"
        android:background="#FFFF"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:padding="7dp"
        android:selectAllOnFocus="true"
        />

    <ImageView
        android:visibility="invisible"
        android:id="@+id/noPassword"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/email"
        android:src="@drawable/ic_delete_foreground"/>

    <EditText
        android:id="@+id/passwordConfirm"
        android:layout_width="match_parent"
        android:layout_marginRight="140dp"
        android:layout_height="45dp"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:background="#FFFF"
        android:imeOptions="actionDone"
        android:layout_marginTop="20dp"
        android:hint="Re-enter your password"
        android:inputType="textPassword"
        android:padding="7dp"
        android:selectAllOnFocus="true"
        />
    <ImageView
        android:visibility="invisible"
        android:id="@+id/noConfirm"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"

        android:layout_below="@+id/password"
        android:src="@drawable/ic_delete_foreground"/>


    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_marginRight="140dp"
        android:layout_height="60dp"
        android:layout_below="@+id/passwordConfirm"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Register"
        android:backgroundTint="#000000"
        android:textColor="#FFF"
        />

</RelativeLayout>